<language Name="CFML" Description="ColdFusion markup language" Version="0.1" EmptySegmentsLanguage="HTML" CaseSensitivity="false" DefaultFileExtensions="cfm,cfc" StartsWith="CFMLStartTag,CFMLEndTag,CFMLComment">
	<tokens>
        <!-- Level 1 DONE -->
        <token Name="CFMLStartTag" StartString="&lt;(cf\s*\w+)\s*">
            <merge_children StripWhitespaceFromName="true">
                <children Name="cfoutput" FromToken="cfoutput_StartTag"/>
                <children Name="cfquery" FromToken="cfquery_StartTag"/>
                <children Name="cfscript" FromToken="cfscript_StartTag"/>
                <children Name="cfset,cf_other" FromToken="ExpressionStartTag"/>
                <children Name="^cf_" NameIsRegex="true" FromToken="CustomStartTag"/>
                <children FromToken="CfKeyValueStartTag"/>
            </merge_children>
        </token>
        <token Name="CFMLEndTag" StartString="&lt;/(cf\s*\w+)\s*&gt;" CloseToken="CFMLStartTag" />
        <token Name="CFMLComment" StartString="&lt;!---" EndString="---&gt;" MultiLine="true" CanHaveTextInside="true">
            <nested_tokens names="CFMLComment" />
        </token>

        <!-- Level 2 -->
        <token Name="cfoutput_StartTag" MultiLine="true" />
        <token Name="cfquery_StartTag" MultiLine="true" />
        <token Name="cfscript_StartTag" MultiLine="true" />
        <token Name="ExpressionStartTag" MultiLine="true" />
        <token Name="CustomStartTag" MultiLine="true" />
        <token Name="CfKeyValueStartTag" MultiLine="true" />

        <!-- Level 3 -->
        <token Name="sharptext" />
        <token Name="cftagexpression" />
        <token Name="cftagkeyvalue" />

        <!-- Level 4 -->
        <token Name="doublesharp" />
        <token Name="sharpexpression" />

        <!-- Level 5 -->
        <token Name="expression" />

        <!-- Level 6 -->
        <token Name="codeblock" />

        <!-- Level 7 -->
        <token Name="subexpression" />
        <token Name="variableindex" />

        <!-- Level 8 -->
        <token Name="scriptblockcomment" MultiLine="true" />
        <token Name="scriptlinecomment" />
        <token Name="singlestring" />
        <token Name="doublestring" />
        <token Name="separator" />
        <token Name="expressionend" />
        <token Name="number" />
        <token Name="boolean" />
        <token Name="operator" />
        <token Name="objectmember" />
        <token Name="keyword" />
        <token Name="function" />
        <token Name="object" />
        <token Name="variable" />
	</tokens>
</language>
